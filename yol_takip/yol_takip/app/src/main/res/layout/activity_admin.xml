<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <EditText
        android:hint="Durak Adi"
        android:id="@+id/durak_adi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <EditText
        android:hint="lat"
        android:id="@+id/lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/durak_adi"
        tools:ignore="MissingConstraints" />
    <EditText
        android:hint="long"
        android:id="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lat"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btn_durak_ekle"
        android:text="Durak Ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lang"/>

    <Spinner
        android:id="@+id/spinDurak"
        android:autofillHints="Durak SeÃ§iniz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_durak_ekle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/yolcuSayisi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spinDurak"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_yolcu"
        android:text="Yolcu Ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yolcuSayisi"/>


    <Button
        android:id="@+id/btn_harita"
        android:text="harita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.286"
        />

</androidx.constraintlayout.widget.ConstraintLayout>