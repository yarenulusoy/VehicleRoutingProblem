<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingLeft="250px"
    android:paddingTop="300px"
    tools:context=".ui.pass.PassFragment" >

    <Spinner
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:id="@+id/spinDurak"
        android:autofillHints="Durak SeÃ§iniz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/yolcuSayisi"
        android:background="@drawable/rounded_edittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spinDurak"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_yolcu"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:text="Yolcu Ekle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/yolcuSayisi"/>

</androidx.constraintlayout.widget.ConstraintLayout>